@using CarClubWebApp.ViewModels
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section class="space-lg h-75" data-jarallax data-speed="0.2">
    <div class="bg-image text-center img-fluid" style="background-image: url('/img/MainCar.jpg'); background-size: 100%; background-repeat: no-repeat; height: 50vh">
            <div class="row align-items-center justify-content-between">
                <div class="col-12 col-md-6 col-lg-5 section-intro">
                    <h1 class="display-3 text-white">Meetup and connect with car enthusiasts near you.</h1>
                    <span class="lead text-white">
                        A community of enthusiasts, passionate about cars and driving. Ready to find a car club that is right for you?
                    </span>
                </div>
            </div>
    </div>
    
    <!--end of container-->
</section>
<!--end of section-->
<section>
    <div class="container">
        @if (Model.Clubs == null || Model.Clubs.Count()== 0)
        {
            <h1 class="fw-light">
                There are no car clubs in your area! <a asp-area="" asp-controller="Account" asp-action="Login">Login</a> and create one!
            </h1>
        }
        else
        {
            <div class="row justify-content-between mb-5">
                <div class="col-auto">
                    <h3>Car clubs near @Model.City, @Model.State</h3>
                </div>
                <!--end of col-->
                <div class="col-auto">
                    <a type="btn btn-success" asp-controller="Club" asp-action="Index" class="btn btn-sm btn-outline-primary">View All Clubs</a>
                </div>
                <!--end of col-->
            </div>
            <ul class="row feature-list feature-list-sm">
                @foreach (var item in Model.Clubs)
                {
                    <li class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id">
                                <img class="card-img-top" src="@item.Image" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">@item.Title</h4>
                                <p class="card-text text-body">@item.Description</p>
                            </div>
                            <div class="card-footer card-footer-borderless d-flex justify-content-between">
                                <div class="dropup">
                                    <a type="btn btn-success" asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    <div class="dropdown-menu dropdown-menu-sm" aria-labelledby="SidekickButton">
                                        <a class="dropdown-item" href="#">Save</a>
                                        <a class="dropdown-item" href="#">Share</a>
                                        <a class="dropdown-item" href="#">Comment</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">Report</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        <!--end of row-->
    </div>
    <!--end of container-->
</section>